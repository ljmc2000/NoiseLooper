<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.NoiseLooper.NoiseLooperAbstract" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/alertButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/alertButtonStyle</item>
    </style>


    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="buttonTint">?attr/colorSecondary</item>
        <item name="buttonIconTint">?attr/colorOnSecondary</item>
    </style>



    <style name="header">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="standardText">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="standardTextContainer">
        <item name="android:layout_height">24sp</item>
    </style>

    <style name="largeHeader">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="largeText">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="largeTextContainer">
        <item name="android:layout_height">48sp</item>
    </style>

    <style name="noiseConfigItem" parent="standardText">
        <item name="android:paddingLeft">20sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>

    <style name="hline">
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:layout_marginBottom">10sp</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/overflow_menu_icon</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="Theme.NoiseLooper" parent="Base.Theme.NoiseLooper" />
</resources>